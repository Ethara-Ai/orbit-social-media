# ============================================
# Environment Variables Configuration
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# ============================================

# --------------------------------------------
# Application Settings
# --------------------------------------------
# Environment: development | staging | production
VITE_APP_ENV=development

# Application name (used in titles, meta tags, etc.)
VITE_APP_NAME=SocialTubb

# Application version
VITE_APP_VERSION=0.0.0

# Base URL for the application
VITE_APP_URL=http://localhost:5173

# --------------------------------------------
# API Configuration
# --------------------------------------------
# Backend API base URL
VITE_API_BASE_URL=http://localhost:5173/api

# API timeout in milliseconds
VITE_API_TIMEOUT=30000

# --------------------------------------------
# AWS Configuration (for deployment scripts)
# Note: These are NOT exposed to the browser
# --------------------------------------------
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name
AWS_CLOUDFRONT_DISTRIBUTION_ID=your_cloudfront_distribution_id

# --------------------------------------------
# Analytics & Monitoring (Optional)
# --------------------------------------------
# Google Analytics Measurement ID
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry DSN for error tracking
VITE_SENTRY_DSN=

# --------------------------------------------
# Feature Flags (Optional)
# --------------------------------------------
# Enable debug mode (shows additional logging)
VITE_DEBUG_MODE=false

# Enable maintenance mode
VITE_MAINTENANCE_MODE=false
